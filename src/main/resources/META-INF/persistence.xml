<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
    <persistence-unit name="ibm-tiendaPU"
        transaction-type="RESOURCE_LOCAL">
        
                    <class>com.ibm.tienda.modelo.DetalleInventario</class>
                    <class>com.ibm.tienda.modelo.DetallePedido</class>
                    <class>com.ibm.tienda.modelo.Empresa</class>
                    <class>com.ibm.tienda.modelo.Inventario</class>
                    <class>com.ibm.tienda.modelo.Pedido</class>
                    <class>com.ibm.tienda.modelo.Producto</class>
                    <class>com.ibm.tienda.modelo.TipoIdentificacion</class>
                    <class>com.ibm.tienda.modelo.TipoProducto</class>
                    <class>com.ibm.tienda.modelo.Usuario</class>
                          
        <properties>
            <property name="hibernate.connection.driver_class"
                value="org.postgresql.Driver" />
             <property name="hibernate.connection.url"
                    value="jdbc:postgresql://127.0.0.1:5432/tienda" />
             <property name="hibernate.connection.username" value="postgres" />
             <property name="hibernate.connection.password" value="123456" />
        </properties>
     
    </persistence-unit>
</persistence>
